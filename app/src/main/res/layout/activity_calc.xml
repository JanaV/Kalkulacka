<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Calc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:textSize="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="0"
            android:numeric="signed"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout4"
    android:layout_marginTop="3pt"
    android:layout_marginLeft="5pt"
    android:layout_marginRight="5pt">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="7"
            android:id="@+id/button6"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="8"
            android:id="@+id/button7"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="9"
            android:id="@+id/button8"
            android:onClick="onClick"
            android:textSize="50dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="C"
            android:id="@+id/buttonCl"
            android:textSize="50dp"
            android:onClick="onButtonCl" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="4"
            android:id="@+id/button2"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="5"
            android:id="@+id/button4"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="6"
            android:id="@+id/button5"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="+"
            android:id="@+id/buttonSum"
            android:onClick="onButtonSum"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="*"
            android:id="@+id/buttonMul"
            android:onClick="onButtonMul"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt">
        <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="1"
                android:id="@+id/but1"
                android:onClick="onClick"
                android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="2"
            android:id="@+id/button"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="3"
            android:id="@+id/button3"
            android:onClick="onClick"
            android:textSize="50dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="-"
            android:id="@+id/buttonSub"
            android:onClick="onButtonSub"
            android:textSize="50dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="/"
            android:id="@+id/buttonDiv"
            android:onClick="onButtonDiv"
            android:textSize="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="0"
            android:id="@+id/button9"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="."
            android:id="@+id/buttonDot"
            android:onClick="onClick"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="ans"
            android:id="@+id/buttonAns"
            android:onClick="onButtonAns"
            android:textSize="50dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="="
            android:id="@+id/buttonEaq"
            android:onClick="onButtonEaq"
            android:textSize="50dp" />

    </LinearLayout>





</LinearLayout>
